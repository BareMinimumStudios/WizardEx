{
	"schemaVersion": 1,
	"id": "wizardex",
	"version": "${version}",
	"name": "WizardEX: Directors Cut",
	"description": "A ported, rewritten mod that allows improving your Wizarding spell stats through leveing up in PlayerEx.",
	"authors": [
		"bibireden",
		"Sewdohe (original author)",
		"pokesmells (contributor)",
		"Bare Minimum Studios (B.M.S)"
	],
	"contact": {
		"homepage": "https://github.com/BareMinimumStudios/WizardEx",
		"sources": "https://github.com/BareMinimumStudios/WizardEx"
	},
	"license": "MIT",
	"icon": "assets/wizardex/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"adapter": "kotlin",
				"value": "com.bibireden.wizardex.WizardEX"
			}
		],
		"client": [
			{
				"adapter": "kotlin",
				"value": "com.bibireden.wizardex.WizardEXClient"
			}
		]
	},
	"mixins": [
		"wizardex.mixins.json",
		{
			"config": "wizardex.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"fabric-api": ">=0.92.2",
		"fabric-language-kotlin": ">=1.10.19+kotlin.1.9.23",
		"minecraft": "1.20.1",
		"java": ">=17",
		"spell_power": ">=0.10.2+1.20.1",
		"owo-lib": ">=0.11.2+1.20",
		"playerex": ">=4.0.0"
	},
	"custom": {
		"mc-publish": {
			"modrinth": "XX7fPDsr",
			"curseforge": 961862,
			"loaders": ["fabric", "quilt"],
			"dependencies": [
				"fabric-api@>=0.92.2+1.20.1(required){modrinth:P7dR8mSH}{curseforge:306612}#(ignore:github)",
				"fabric-language-kotlin@>=1.9.5+kotlin.1.8.22(required){modrinth:Ha28R6CL}{curseforge:308769}#(ignore:github)",
				"spell-power@>=0.15.8+1.20.1(required){modrinth:8ooWzSQP}{curseforge:771265}#(ignore:github)",
				"playerex@>=4.0.0+1.20.1(required){modrinth:4UKlJSdk}{curseforge:958325}#(ignore:github)",
				"owo-lib@0.11.2(required){modrinth:ccKDOlHs}{curseforge:532610}#(ignore:github)"
			]
		}
	}
}